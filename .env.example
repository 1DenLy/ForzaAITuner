# .env.example

# --- Application Settings ---
APP_ENV=development      # development / production / testing
APP_DEBUG=true
LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR

# --- Network (UDP Listener) ---
FORZA_PORT=5300          # Forza Data Out
FORZA_IP=127.0.0.1

# --- Database ---
DB_HOST=postgres_db
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=db

# --- AI Model ---
MODEL_PATH=./models/*
INFERENCE_DEVICE=cpu     # cpu / cuda

# --- Feature Flags ---
RECORD_SESSION=true      # Should telemetry be recorded in the database?